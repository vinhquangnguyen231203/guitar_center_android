<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="230dp">

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="250dp"
    android:orientation="vertical"
    tools:ignore="MissingConstraints">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#BAB2CA"
        app:layout_constraintTop_toTopOf="parent">
      <TextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:text="ID Order:"
          android:layout_marginLeft="10dp"
          android:textSize="20dp"
          android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_orderId"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="123124124124"
            android:textSize="20dp"
            android:textStyle="italic"
            android:layout_marginLeft="40dp"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#BAB2CA"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Order date:"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_orderTime"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày + giờ"
            android:textSize="20dp"
            android:textStyle="italic"
            android:layout_marginLeft="20dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#BAB2CA"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Status:"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_orderStatus"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Đang xử lý"
            android:textColor="#329736"
            android:textSize="20dp"
            android:textStyle="bold"
            android:layout_marginLeft="60dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="#BAB2CA"
        app:layout_constraintTop_toTopOf="parent">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Thành tiền"
            android:layout_marginLeft="10dp"
            android:textSize="20dp"
            android:textStyle="bold"/>
        <TextView
            android:id="@+id/txt_totalPrice"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2.000.000"
            android:textSize="20dp"
            android:textStyle="italic"
            android:layout_marginLeft="30dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="68dp"
        android:background="#BAB2CA"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/btn_viewOrderDetail"> <!-- Thay thế linear_layout_status bằng id của LinearLayout chứa các TextView trạng thái -->

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_viewOrderDetail"
            android:layout_width="200dp"
            android:layout_height="60dp"
            android:text="Xem chi tiết đơn hàng" />
    </LinearLayout>


</LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>